//schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(cuid())
  username       String
  email          String   @unique
  picture        String
  password       String
  phone_number   Int
  favorite_homes Home[]
  is_admin       Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Home {
  id             String   @id @default(cuid())
  title          String
  available      Boolean  @default(true)
  description    String
  neighborhood   String
  address        String
  notes          String
  images_url     Image[]
  price          Int
  area           Int
  floor          Int
  rooms          Int
  bathrooms      Int
  storage        Int
  antiquity      Int
  parking_spots  Int
  favorite_users User[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Image {
  id         String  @id @default(cuid())
  url        String
  home_image Home[]
  is_cover   Boolean @default(false)
}
