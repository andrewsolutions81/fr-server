generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Home {
  id             String         @id @default(cuid())
  title          String
  description    String
  neighborhood   String
  address        String
  notes          String
  available      Boolean        @default(true)
  price          Int
  area           Int
  floor          Int
  rooms          Int
  bathrooms      Int
  storage        Int
  antiquity      Int
  parking_spots  Int
  images_url     String[]
  favorite_users FavoriteHome[]
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
}

model User {
  id             String         @id @default(cuid())
  username       String
  email          String         @unique
  password       String
  phone_number   Int
  is_admin       Boolean        @default(false)
  favorite_homes FavoriteHome[]
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
}

model FavoriteHome {
  id     String @id @default(cuid())
  user   User   @relation(fields: [userId], references: [id])
  userId String
  home   Home   @relation(fields: [homeId], references: [id])
  homeId String
}
